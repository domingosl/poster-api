<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xs-12 col-md-8">
            <br />
            <div class="jumbotron">

                <%if (result === 'fail') { %>
                    <ion-icon name="sad"></ion-icon>
                <% } %>

                <%if (result === 'success') { %>
                    <ion-icon name="checkmark-circle-outline"></ion-icon>
                <% } %>

                <h1 class="display-4"><%-title%></h1>
                <p class="lead"><%-message%></p>
            </div>

        </div>
    </div>
</div>
